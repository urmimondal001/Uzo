import express from "express";
import { createClient } from "@supabase/supabase-js";

const router = express.Router();

const supabase = createClient(
  process.env.SUPABASE_URL,
  process.env.SUPABASE_SERVICE_ROLE_KEY
);

router.post("/view", async (req, res) => {
  try {
    const { user_id, reels_id } = req.body;

    if (!user_id || !reels_id) {
      return res.status(400).json({
        status: false,
        message: "user_id and reels_id are required",
      });
    }

    // 1) Check if already viewed
    const { data: existing, error: existingError } = await supabase
      .from("reels_views")
      .select("*")
      .eq("user_id", user_id)
      .eq("reels_id", reels_id)
      .single();

    if (existing) {
      return res.status(200).json({
        status: true,
        message: "Already viewed",
      });
    }

    // 2) Add view record
    const { error: insertError } = await supabase
      .from("reels_views")
      .insert([{ user_id, reels_id }]);

    if (insertError) {
      return res.status(500).json({
        status: false,
        message: insertError.message,
      });
    }

    // 3) Increase view_count by +1
    const { error: updateError } = await supabase
      .rpc("increment_view", { reelid: reels_id });

    if (updateError) {
      return res.status(500).json({
        status: false,
        message: updateError.message,
      });
    }

    return res.status(200).json({
      status: true,
      message: "View added successfully",
    });

  } catch (err) {
    return res.status(500).json({
      status: false,
      message: "Server Error",
      error: err.message,
    });
  }
});

export default router;
